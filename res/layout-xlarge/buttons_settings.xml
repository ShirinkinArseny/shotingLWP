<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content" android:weightSum="1" android:gravity="center_horizontal">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/applySettings"
            android:id="@+id/applyButton" android:enabled="true" android:layout_weight="0.3"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancelSettings"
            android:id="@+id/cancelButton" android:enabled="true" android:layout_weight="0.3"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setDefault"
            android:id="@+id/defaultButton" android:enabled="true"
            android:layout_weight="0.3"/>
</LinearLayout>